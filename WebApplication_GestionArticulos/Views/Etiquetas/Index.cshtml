@model IEnumerable<WebApplication_GestionArticulos.Models.Etiqueta>
@{
    ViewData["Title"] = "Lista de etiquetas";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div class="col-4">
        <h3>Lista de etiquetas</h3>
    </div>
     <div class="col-3">
         <a asp-action="Crear" class="btn btn-primary form-control">Crear etiqueta</a>
    </div>   
</div>

<div>
    @if(Model.Count()>0){
        <table class="table table-striped border">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.Etiqueta_Id)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Titulo)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Fecha)
                    </th>
                    
                    <th></th>
                </tr>
            </thead>
            <tbody>
            @foreach (var item in Model) {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Etiqueta_Id)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Titulo)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Fecha)
                    </td>
                    <td>
                        <a class="btn btn-primary text-white" asp-action="Editar" asp-route-id="@item.Etiqueta_Id">Editar</a> 
                        <a class="btn btn-danger text-white" asp-action="Borrar" asp-route-id="@item.Etiqueta_Id"
                            onclick="return confirm('Esta seguro que quiere borrar el articulo?')">Borrar</a>
                    </td>
                </tr>
            }
            </tbody>
        </table>
    }
    else
    {
        <p>No hay etiquetas</p>
    }
</div>
