@model IEnumerable<WebApplication_GestionArticulos.Models.Articulo>

@{
    ViewData["Title"] = "Lista de artículos";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div class="col-4">
        <h3>Lista de artículos</h3>
    </div>
     <div class="col-3">
         <a asp-action="Crear" class="btn btn-primary form-control">Crear artículo</a>
    </div>   
</div>

<div>
    @if(Model.Count()>0){
        <table class="table table-striped border">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.TituloArticulo)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Descripcion)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Calificacion)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Categoria)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Fecha)
                    </th>
                    
                    <th></th>
                </tr>
            </thead>
            <tbody>
            @foreach (var item in Model) {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.TituloArticulo)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Descripcion)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Calificacion)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Categoria.Nombre)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Fecha)
                    </td>
                    <td>
                        <a class="btn btn-primary text-white" asp-action="Editar" asp-route-id="@item.Articulo_Id">Editar</a> 
                        <a class="btn btn-warning text-white" asp-action="AdministrarEtiquetas" asp-route-id="@item.Articulo_Id">Administrar Etiquetas</a> 
                        <a class="btn btn-danger text-white" asp-action="Borrar" asp-route-id="@item.Articulo_Id"
                            onclick="return confirm('Esta seguro que quiere borrar el articulo?')">Borrar</a>
                    </td>
                </tr>
            }
            </tbody>
        </table>
    }
    else
    {
        <p>No hay articulos</p>
    }
</div>


